<div class="my-4">
  <%= form_with(model: @post, local: true, class: "form-horizontal post" ) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :title, :class => 'form-control post-title', placeholder: 'Title' %>
      <%=f.error_span(:title) %>
    </div>

    <div class="form-group qpad-text-edit">
      <%= f.rich_text_area :body, placeholder: 'Type here ..' %>
      <%=f.error_span(:body) %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>

  <% end %>
</div>