<div class="my-4">
  <%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

    <% if @post.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'form-control' %>
      <%=f.error_span(:title) %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, :class => 'form-control', id: 'editor', rows: 30 %>
      <%=f.error_span(:content) %>
    </div>

    <% if @post.new_record? %>
      <div class="form-group">
        <%= f.label :kind %>
        <%= f.select :kind, options_for_select(Post::KINDS), {},  :class => 'form-control custom-select' %>
        <%=f.error_span(:kind) %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>

  <% end %>
</div>